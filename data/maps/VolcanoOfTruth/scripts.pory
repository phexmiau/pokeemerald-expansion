script VolcanoOfTruth_EventScript_Reshiram {
    lock
    msgbox(format("Do you want to join up with RESHIRAM?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES)
    {
    	setflag(FLAG_SYS_POKEMON_GET)
        setvar(VAR_VOLCANO_OF_TRUTH_STATE, 2)
        closemessage
        faceplayer
        playmoncry(SPECIES_RESHIRAM, CRY_MODE_ENCOUNTER)
        waitmoncry
        givemon(SPECIES_RESHIRAM, 50)
        playfanfare(MUS_OBTAIN_ITEM)
        msgbox(format("RESHIRAM joins you!"))
        call(NicknamePartyMon)
        closemessage
        fadescreen(FADE_TO_BLACK)
        removeobject(1)
        removeobject(2)
        fadescreen(FADE_FROM_BLACK)
        msgbox(format("GROUDON hurried away!"))
        waitmessage
    }
    closemessage
    release
}

