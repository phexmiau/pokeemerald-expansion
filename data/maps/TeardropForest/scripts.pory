script TeardropForest_EventScript_Lunala {
    lock
    msgbox(format("Do you want to join up with LUNALA?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES)
    {
    	setflag(FLAG_SYS_POKEMON_GET)
        setvar(VAR_TEARDROP_FOREST_STATE, 2)
        closemessage
        faceplayer
        playmoncry(SPECIES_LUNALA, CRY_MODE_ENCOUNTER)
        waitmoncry
        givemon(SPECIES_LUNALA, 50)
        playfanfare(MUS_OBTAIN_ITEM)
        msgbox(format("LUNALA joins you!"))
        call(NicknamePartyMon)
        closemessage
        fadescreen(FADE_TO_BLACK)
        removeobject(1)
        removeobject(2)
        fadescreen(FADE_FROM_BLACK)
        msgbox(format("KYOGRE swam away!"))
        waitmessage
    }
    closemessage
    release
}

