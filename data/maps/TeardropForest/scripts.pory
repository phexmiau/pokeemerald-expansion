script TeardropForest_EventScript_SeeLegendaries {
    lock
    special(SpawnCameraObject)
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_up * 2 walk_left * 4))
    waitmovement(0)
    playmoncry(SPECIES_LUNALA, CRY_MODE_ENCOUNTER)
    msgbox(format("You see LUNALA resting in a clearing ahead of you."), MSGBOX_AUTOCLOSE)
    waitmoncry
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_right * 4 walk_up * 3 walk_right * 4))
    waitmovement(0)
    playmoncry(SPECIES_KYOGRE, CRY_MODE_ENCOUNTER)
    msgbox(format("KYOGRE is swimming in the nearby lake."), MSGBOX_AUTOCLOSE)
    waitmoncry
    setvar(VAR_TEARDROP_FOREST_STATE, 1)
    applymovement(OBJ_EVENT_ID_CAMERA, moves(walk_left * 4 walk_down * 5))
    waitmovement(0)
    special(RemoveCameraObject)
    msgbox(format("It seems like either wants to join you!"),MSGBOX_AUTOCLOSE)
    release
}

script TeardropForest_EventScript_Leave {
    msgbox("You can't just leave yet!", MSGBOX_AUTOCLOSE)
    applymovement(LOCALID_PLAYER, moves(walk_right))
}